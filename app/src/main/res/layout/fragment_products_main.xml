<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.ProductsMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:elevation="8dp"
            android:background="@color/grey_100"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_mono_bold"
                android:text="Products"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:contentDescription="Attach Products CSV File"
                android:id="@+id/importIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:layout_toLeftOf="@id/scanIcon"
                android:src="@drawable/attach_file_icon"
                app:tint="@color/black" />

            <ImageView
                android:contentDescription="Scan individual products"
                android:id="@+id/scanIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/removeProdBtn"
                android:padding="10dp"
                android:src="@drawable/scan_icon"
                app:tint="@color/blue_300" />

            <ImageView
                android:contentDescription="Sale products"
                android:id="@+id/removeProdBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@id/searchProdBtn"
                android:padding="10dp"
                android:src="@drawable/point_of_sale_icon"
                app:tint="@color/red_300" />
            <ImageView
                android:transitionName="toSearchTransition"
                android:contentDescription="Search for products"
                android:id="@+id/searchProdBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/search_icon"
                app:tint="@color/black" />
        </RelativeLayout>
        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:elevation="8dp"
                android:background="@color/trans_success_stroke_color"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/textViewCountProductsTot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewIn"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Total Products"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCountProductsTot"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="211"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productsCount"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_100"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/cardUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/green_200">

                                <ImageView

                                    android:id="@+id/imageUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/arrow_up_icon"
                                    app:tint="@color/white" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:elevation="8dp"
                android:background="@color/common_google_signin_btn_text_light_disabled"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/textViewCountStockTot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewIn"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_mono"
                    android:text="Products Sold"
                    android:textColor="@color/red_300"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productsStockCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewCountStockTot"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="30sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productsStockCount"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:padding="1dp">

                        <androidx.cardview.widget.CardView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/cardUp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/red_200">

                                <ImageView
                                    android:id="@+id/imageUp2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="1dp"
                                    android:src="@drawable/arrow_down_icon"
                                    app:tint="@color/white" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_mono_bold"
                android:text="Products by Category"
                android:textColor="@color/black"
                android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsMainRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>